<form action="<?php echo $this->getBaseUrl().'huzefa/index/addproduct'; ?>" method="post" >
<label>Category</label>
<select name="category">
<?php
$parentid = '2';
$categories = Mage::getModel('catalog/category')->load($parentid)->getChildren(); 


foreach ($categories as $category){ 
$cat = Mage::getModel('catalog/category'); 
$cat->load($category); 

echo '<option value="'.$cat->getId().'">'.$cat->getName().'</option>';
}

?>
</select>
<br/>
<label>Attribute Set</label>

<select name="attribute_set"> 
<?php foreach($this->attributeSets() as $attribute): ?>
<option id="<?php echo $attribute['id']; ?>"><?php echo $attribute['name']; ?></option>
<?php endforeach; ?>
</select>
<br/>
<?php
$items = Mage::getModel('catalog/product_attribute_set_api')->items();
print_r($items);
foreach($items as $item) {
  echo "<pre>";
 print_r($item);
}
$attributes = Mage::getModel('catalog/product')->getResource()
                ->loadAllAttributes()
                ->getSortedAttributes('9');

?>
<?php
$attribute_info = Mage::getModel('catalog/product_attribute_api')->info('126');
echo "<pre>";
print_r($attribute_info);

?>
<?php  foreach ($attributes as $attribute) { ?>
<?php if(($attribute->getIsRequired()) && ($attribute->getIsVisible())): ?>
   <label><?php echo $attribute->getFrontendLabel(); ?></label>

  <?php if($attribute->getFrontendInput() =="text") { ?>
   <input type="text" name="<?php echo $attribute->getAttributeCode(); ?>"><br/>
 <?php } else if ($attribute->getFrontendInput() =="textarea") { ?>
  <textarea cols="3" rows="3" name="<?php echo $attribute->getAttributeCode(); ?>"></textarea><br/>

 <?php } else if($attribute->getFrontendInput() =="select") {?>
<select name="<?php echo $attribute->getAttributeCode(); ?>">
 <?php $attribute_details = Mage::getSingleton("eav/config")->getAttribute("catalog_product", $attribute->getAttributeCode());
       $options = $attribute_details->getSource()->getAllOptions(false); 
      foreach($options as $option){ 
      // print_r($option) and find all the elements
      echo '<option value="'.$option['value'].'">'.$option['label'].'</option>';
     } 
 
?>
</select><br/>
 <?php } ?>
<?php
  endif;
 }
?>
